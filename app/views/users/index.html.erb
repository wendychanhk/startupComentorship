<h1>Startup Comentorship Network</h1>
  <br>
    <br>
  <div class="col-md-12">
    <div style="overflow-y: auto;">

      <!-- Default panel contents -->

      <% if @users.present? %>
      <%= render(
        partial: 'users/list',
        locals: { users: @users }
        ) %>
        <% else %>
        <p>There is no user matching your profile.</p>
        <% end %>
      </div>
        <br>
          <br>
           <br>
          <br>
    </div>




    <div class="col-md-6">
      <hr>

      <h4>Conversations</h4>
       <br>
  <br>
      <div style="height: 450px; overflow-y: auto;">
        <% if @conversations.any? %>
        <ul class="media-list">
          <% @conversations.each do |conversation| %>
          <li class="media">
            <%= image_tag(conversation_interlocutor(conversation).avatar.url(:thumb), class: "media-object pull-left") %>
            <div class="media-body">
              <%= link_to "", conversation_path(conversation), class: "conversation", "data-cid" => conversation.id %>
              <h4 class="media-heading"><%= conversation_interlocutor(conversation).first_name %></h4>
              <p><%= conversation.messages.last.nil? ? "No messages" : truncate(conversation.messages.last.body, length: 45) %></p>
            </div>
          </li>

          <% end %>
        </ul>
        <% else %>
        <p>You have no conversations. Click "send message" to start networking.</p>
        <% end %>
      </div>
    </div>




    <div class="col-md-6" >


     <hr>
        <% current_user.need.shift %>

     <h4>Upcoming events in <%= current_user.city %> under these topics: </h4>
     <br> <h5><%= current_user.need.join("  |  ") %></h5>
     <br>

     <div style="height: 450px; overflow-y: auto;">


      <% @events.events.each do |event| %>

      <div class="event">  <ul> <li> <a href= <%=event.url %>><%= event.name.text %> </a>
       <div class ="date"> <%= event.start.local.split(/T/)[0]%> </div><br></li>   </ul></div>

       <% end %>


     </div>


   </div>

