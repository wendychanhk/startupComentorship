<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>

  <%= devise_error_messages! %>




  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>



 <div class="field">
    <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
     </div>
      <div class="field">
    <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
     </div>


   <div>
    Add Your <%= f.label :avatar %>:
    <%= f.file_field :avatar %>
   </div>


   <div class="field">
    <%= f.label :country_code %><br />
    <%= f.country_select :country_code, priority: %w(US GB ES HK SG) %>
     </div>




       <div class="field">
    <%= f.label :city %><br />
        <%= f.text_field :city %>
     </div>

      <div class="field">
    <%= f.label :company %><br />
        <%= f.text_field :company %>
     </div>
      <div class="field">
    <%= f.label :position %><br />
        <%= f.text_field :position %>
     </div>
<div class="field">
  <%= f.label :screen_name %><br />
  <%= f.text_field :screen_name %>
</div>
       <div class="field">
    <%= f.label :intro %><br />
        <%= f.text_field :intro %>
     </div>

 <div class="field">
<%= f.label :skill %><br />
<%= f.select :skill, options_for_select(["Finance, Accounting", "E-Commerce, Virtual Currency", "Venture Capital, Crowdfunding", "M&A", "Coding", "Design, UX", "SEO, SEM, Social Media", "Big Data, Cloud Computing ", "Customer Service, Acquisition", "PR, Communications", "Leadership, Management", "Recruitment", "Business Operations", "Marketing, Sales, Branding", "Product Development", "Legal"]), {}, {:multiple => true, :class => "chzn-select", :style => "width:450px; height: 280px" } %>
  </div>

 <div class="field">
<%= f.label :need %><br />
<%= f.select :need, options_for_select(["Finance, Accounting", "E-Commerce, Virtual Currency", "Venture Capital, Crowdfunding", "M&A", "Coding", "Design, UX", "SEO, SEM, Social Media", "Big Data, Cloud Computing ", "Customer Service, Acquisition", "PR, Communication", "Leadership, Management", "Recruitment", "Business Operations", "Marketing, Sales, Branding", "Product Development", "Legal"]), {}, {:multiple => true, :class => "chzn-select", :style => "width:450px; height: 280px" } %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
